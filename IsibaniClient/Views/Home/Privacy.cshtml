@model IsibaniClient.Models.RegisterViewModel
    <!-- left column -->
<div class="col-md-12">

    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Client Form</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form">
            <div class="card-body">
                <div class="row">

                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-3">

                        <div class="form-group">

                            <label for="Name">Name</label>
                            <input type="email" class="form-control" asp-for="Name" id="Email" placeholder="Enter name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Email">Email address</label>
                            <input type="email" class="form-control" asp-for="Email" id="Email" placeholder="Enter email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>


                    </div>
                    <div class="col-md-3">

                        <div class="form-group">
                            <label for="Address">Address</label>
                            <input type="email" class="form-control" asp-for="Address" id="Address" placeholder="Enter address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="PhoneNumber">Phone Number</label>
                            <input type="email" class="form-control" asp-for="PhoneNumber" id="Address" placeholder="Enter address">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                    </div>
                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer" align="center">

                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Client Data</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Client name</th>
                        <th>Email</th>
                        <th>Phone No</th>
                        <th>Address</th>
                        <th>ActionLink</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Test data</td>
                        <td>
                            Test data
                        </td>
                        <td>Test data</td>
                        <td> Test data</td>
                        <td>Test data</td>
                    </tr>

                </tbody>
                <tfoot>
                    <tr>
                        <th>Client Name</th>
                        <th>Email</th>
                        <th>Phone No</th>
                        <th>Address</th>
                        <th>ActionLink</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <!-- Form Element sizes -->
</div>

